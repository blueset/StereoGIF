<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluesetStudio.stereogif"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.bluesetStudio.stereogif.StereoGIF"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bluesetStudio.stereogif.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bluesetStudio.stereogif.CameraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_camera"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.bluesetStudio.stereogif.PhotoByIntent"
            android:label="@string/title_activity_photo_by_intent" >
        </activity>
        <activity
            android:name="com.bluesetStudio.stereogif.PhotoSelection"
            android:label="@string/title_activity_photo_selection"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.bluesetStudio.stereogif.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.bluesetStudio.stereogif.GIFPreview"
            android:label="@string/title_activity_gifpreview" >
        </activity>
        <activity
            android:name="com.bluesetStudio.stereogif.GalleryActivity"
            android:label="@string/title_activity_gallery" >
        </activity>
    </application>

</manifest>
